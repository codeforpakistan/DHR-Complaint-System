<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/shape"
        android:layout_margin="@dimen/dist_5"
        >

        <ImageView android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/image_view"
            android:layout_gravity="center_vertical"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="3"
        android:padding="@dimen/dist_5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:padding="3dp">

            <TextView
                android:layout_weight="0.25"
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/notifiTitle"
                android:textColor="@color/colorblack"
                android:textSize="@dimen/h3"
                android:textStyle="bold"
                android:paddingLeft="@dimen/dist_5"
                android:gravity="left"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/date"
                android:layout_weight="0.75"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="12/05/2018"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="12dp"
                android:textColor="@color/colorGreen"/>

        </LinearLayout>

        <TextView
            android:id="@+id/notification"
            android:layout_width="match_parent"
            android:paddingLeft="@dimen/dist_5"
            android:layout_height="wrap_content"
            android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy."
            android:textSize="@dimen/dist_10"
            android:paddingTop="@dimen/dist_5"
            android:textColor="@color/colorGrey"
            android:padding="@dimen/dist_5"/>

    </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/no_data_img"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/notify"
        android:scaleType="centerCrop"
        android:layout_centerInParent="true"/>




</RelativeLayout>