<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

     <android.support.v7.widget.CardView
         android:id="@+id/card_login"
         android:layout_width="match_parent"
         android:layout_height="130dp"
         android:background="@drawable/custom_card"
         android:layout_marginLeft="@dimen/dist_10"
         android:layout_marginRight="@dimen/dist_10"
         app:cardUseCompatPadding="true"
         app:cardCornerRadius="5dp">

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="horizontal"
             android:gravity="center_vertical">

             <RelativeLayout
                 android:id="@+id/rel"
                 android:layout_width="4dp"
                 android:layout_height="match_parent"
                 android:background="@color/colorOrange" />

            <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:weightSum="3"
                   android:layout_margin="@dimen/dist_5">

                     <LinearLayout
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:orientation="horizontal"
                         android:weightSum="1"
                         android:padding="@dimen/dist_5">

                        <TextView
                            android:layout_weight="0.25"
                            android:id="@+id/title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/complaintTitle"
                            android:textColor="@color/colorblack"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:paddingLeft="@dimen/dist_5"
                            android:gravity="left"
                            android:layout_gravity="center"/>

                         <TextView
                             android:layout_weight="0.375"
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:text="Status:"
                             android:textColor="@color/colorGreen"
                             android:textSize="14sp"                             android:gravity="right"
                             android:layout_gravity="center"/>

                        <TextView
                            android:id="@+id/status"
                            android:layout_weight="0.375"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Approved"
                            android:textColor="@color/colorGreen"
                            android:textSize="14sp"                            android:gravity="center"
                            android:layout_gravity="center"/>

                     </LinearLayout>

                     <TextView
                         android:id="@+id/compl_detail"
                         android:layout_width="match_parent"
                         android:paddingLeft="@dimen/dist_5"
                         android:layout_height="wrap_content"
                         android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy."
                         android:textSize="12sp"
                         android:visibility="gone"
                         android:maxLines="2"
                         android:paddingTop="@dimen/dist_5"
                         android:paddingBottom="@dimen/dist_5"
                         android:textColor="@color/colorGrey"/>

                     <LinearLayout
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:orientation="horizontal"
                         android:weightSum="1"
                         android:paddingLeft="@dimen/dist_5"
                         android:paddingTop="@dimen/dist_5"
                         android:layout_gravity="center">

                        <TextView
                            android:layout_weight="0.4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Category:"
                            android:gravity="left"
                            android:layout_gravity="center"
                            android:textSize="12sp"
                            android:textColor="@color/colorGrey"/>

                         <TextView
                             android:layout_weight="0.25"
                             android:id="@+id/categories"
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:text="Women Rights"
                             android:layout_gravity="center"
                             android:textSize="12sp"
                             android:textColor="@color/colorGrey"/>

                        <TextView
                            android:id="@+id/date"
                            android:layout_weight="0.35"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="12/05/2018"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="12sp"
                            android:textColor="@color/colorGrey"/>

                     </LinearLayout>

               </LinearLayout>

         </LinearLayout>

         </android.support.v7.widget.CardView>

</RelativeLayout>